<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mad.vastav.keynote.scribbleActivity">

    <com.mad.vastav.keynote.canvasActivity
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/canvas"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/saveCanvas"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:textColor="#212121"
        android:onClick="clearCanvas"
        android:paddingBottom="0dp"
        android:text="clear canvas"
        app:layout_constraintRight_toLeftOf="@+id/saveCanvas"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/saveCanvas"
        android:layout_marginEnd="32dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/saveCanvas"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/saveCanvas"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textColor="#212121"
        android:background="#FFEB3B"
        android:gravity="center_horizontal|center"
        android:onClick="addImageToGallery"
        android:text="save to galery"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="35dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="8dp" />
</android.support.constraint.ConstraintLayout>
